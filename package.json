{
	"name": "greencode_backend",
	"version": "0.0.0",
	"private": true,
	"author": "Fernando Repiso <repiso.fernando@gmail.com>",
	"repository": "git@github.com:frepiso/greencode_backend.git",
	"license": "MIT",
	"workspaces": [
		"apps/**",
		"packages/**"
	],
	"scripts": {
		"dev": "turbo run dev --no-cache  --continue",
		"build": "turbo run build",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"start": "turbo run start --continue",
		"clean": "turbo run clean && rm -rf node_modules",
		"commit": "commit",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\""
	},
	"devDependencies": {
		"@frepiso/config-commits": "*",
		"@frepiso/config-eslint": "*",
		"turbo": "^2.5.5"
	},
	"engines": {
		"node": ">=22.x"
	},
	"packageManager": "yarn@1.22.22"
}
