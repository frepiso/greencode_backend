{
	"name": "api-gateway",
	"version": "1.0.0",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc && tsc-alias",
		"dev": "ts-node-dev --respawn src/index.ts",
		"test": "jest --passWithNoTests --detectOpenHandles",
		"test-coverage": "jest --passWithNoTests --detectOpenHandles --coverage --coverageReporters=lcov && tools-testcoverage",
		"lint": "TIMING=1 eslint .",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist && rm -rf coverage"
	},
	"dependencies": {
		"@frepiso/apis-server": "*",
		"@frepiso/tools-logger": "*"
	},
	"jest": {
		"preset": "@frepiso/config-jest/preset-apps",
		"displayName": "api-gateway"
	}
}
