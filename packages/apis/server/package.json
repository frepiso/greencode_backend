{
	"name": "@frepiso/apis-server",
	"version": "0.0.0",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc && tsc-alias",
		"lint": "TIMING=1 eslint .",
		"test": "jest --passWithNoTests --detectOpenHandles",
