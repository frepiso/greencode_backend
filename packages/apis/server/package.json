		"@frepiso/config-supertest": "*",
		"@frepiso/config-typescript": "*",
		"@frepiso/tools-testcoverage": "*",
		"@types/body-parser": "^1.19.6",
		"@types/cors": "^2.8.19",
		"@types/morgan": "^1.9.10",
		"@types/node": "^24.2.1",
		"nodemon": "^3.1.10",
		"ts-node-dev": "^2.0.0"
	},
	"files": [
		"dist/**"
